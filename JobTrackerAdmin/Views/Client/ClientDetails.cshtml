<style>
    .panel .panel-heading .panel-title {
        margin: 0;
        font-size: 30px;
        font-weight: 800;
    }
</style>

@model IEnumerable<JobTrackerAdmin.Models.Client>

@{
    ViewBag.Title = "ClientDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <div class="panel">
            <div class="panel-heading">
                <h2 class="panel-title">Client Information</h2>            
            </div>
            
            <div class="panel-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Sl No.</th>
                            <th>@Html.DisplayNameFor(model => model.clientName)</th>
                            <th>@Html.DisplayNameFor(model => model.clientAddress)</th>
                            <th>@Html.DisplayNameFor(model => model.clientContact)</th>
                            <th>@Html.DisplayNameFor(model => model.clientPAN)</th>
                            <th>@Html.DisplayNameFor(model => model.clientGST)</th>
                            <th>@Html.DisplayNameFor(model => model.clientRemarks)</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.clientId)</td>
                        
                        <td>@Html.ActionLink(Html.DisplayFor(modelItem => item.clientName).ToHtmlString(), "ClientAddEdit", new { id = item.clientId }, new { dataval = item.clientId })</td>
                        <td>@Html.DisplayFor(modelItem => item.clientAddress)</td>
                        <td>@Html.DisplayFor(modelItem => item.clientContact)</td>
                        <td>@Html.DisplayFor(modelItem => item.clientPAN)</td>
                        <td>@Html.DisplayFor(modelItem => item.clientGST)</td>
                        <td>@Html.DisplayFor(modelItem => item.clientRemarks)</td>
                        <td>
                            <a href="@Url.Action("ClientAddEdit", "Client", new { id = item.clientId })"><img src="~/Content/assets/img/icon/Edit20X20.png" /></a>
                            @*@Html("Edit", "VendorAddEdit", new { id = item.VendorID })*@ |
                            <a href="#"><img src="~/Content/assets/img/icon/Del20X20.png" /></a>
                            @*@Html.ActionLink("Edit", "ClientAddEdit", new { id = item.clientId }) |
                            @Html.ActionLink("Details", "Details", new { id = item.clientId }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.clientId })*@
                        </td>
                    </tr>
}
                 </tbody>
                </table>

                <hr />
                <p>   @Html.ActionLink("Add New Client", "ClientAddEdit/0", null, new { @class = "btn btn-success" })</p>

            </div>
        </div>
    </div>
</div>