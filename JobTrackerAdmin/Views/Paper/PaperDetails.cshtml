@model IEnumerable<JobTrackerAdmin.Models.Paper>

@{
    ViewBag.Title = "PaperDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h3 class="page-title">PaperDetails</h3>
    

    <p>
        @Html.ActionLink("Create New", "PaperAddEdit")
    </p>
    <div class="row">
        <div class="col-md-12">
            <!-- TABLE STRIPED -->
            <div class="panel">
                <div class="panel-heading">
                    <h3 class="panel-title">Striped Row</h3>
                </div>
                <div class="panel-body">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.PaperType)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Rate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.clientRemarks)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                           @foreach (var item in Model)
            {
                            <tr>
                                <td>
                                    
                                    @Html.ActionLink(Html.DisplayFor(modelItem => item.PaperType).ToHtmlString(), "PaperAddEdit", new { id = item.PaperID },new { dataval=item.PaperID})


                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Rate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.clientRemarks)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.PaperID }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.PaperID }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.PaperID })
                                </td>
                            </tr>
                           }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- END TABLE STRIPED -->
        </div>
     </div>
      
