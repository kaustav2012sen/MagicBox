@model JobTrackerAdmin.Models.Paper

@{
    ViewBag.Title = "PaperAddEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>PaperAddEdit</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()    
   
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.PaperID)
        @Html.LabelFor(model => model.PaperType, htmlAttributes: new { @class = "control-label col-md-2" })
            
        @Html.EditorFor(model => model.PaperType, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.PaperType, "", new { @class = "text-danger" })

        @Html.LabelFor(model => model.PaperRemarks, htmlAttributes: new { @class = "control-label col-md-2" })
         
        @Html.EditorFor(model => model.PaperRemarks, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.PaperRemarks, "", new { @class = "text-danger" })
          
       <input type="submit" value="Create" class="btn btn-default" />
     
}

<div>
    @Html.ActionLink("Back to List", "PaperDetails")
</div>

<!-- To show message that Product is Inserted/Updated successfully-->
<div>
    @{

        if (ViewBag.Itemmsg != null)
        {
            <span style="color:green; font-weight:bold">@ViewBag.Itemmsg</span>
        }
    }
</div>

