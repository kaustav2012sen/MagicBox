@model IEnumerable<JobTrackerAdmin.Models.Vendor>

@{
    ViewBag.Title = "VendorDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <div class="panel">
            <div class="panel-heading">
                <h2 class="panel-title">Vendor Information</h2>
            </div>

            <div class="panel-body">
                <table class="table table-striped">
                    <thead>
                        <tr>

                            <th>@Html.DisplayNameFor(model => model.VendorName)</th>
                            <th>@Html.DisplayNameFor(model => model.VendorAddress)</th>
                            <th>@Html.DisplayNameFor(model => model.VendorContact)</th>
                            <th>@Html.DisplayNameFor(model => model.VendorEmail)</th>
                            <th>@Html.DisplayNameFor(model => model.VendorPAN)</th>
                            <th>@Html.DisplayNameFor(model => model.VendorGST)</th>
                            <th>@Html.DisplayNameFor(model => model.VendorRemarks)</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.ActionLink(Html.DisplayFor(modelItem => item.VendorName).ToHtmlString(), "VendorAddEdit", new { id = item.VendorID }, new { dataval = item.VendorID })</td>
                                
                                <td>@Html.DisplayFor(modelItem => item.VendorAddress)</td>
                                <td>@Html.DisplayFor(modelItem => item.VendorContact)</td>
                                <td>@Html.DisplayFor(modelItem => item.VendorEmail)</td>
                                <td>@Html.DisplayFor(modelItem => item.VendorPAN)</td>
                                <td>@Html.DisplayFor(modelItem => item.VendorGST)</td>
                                <td>@Html.DisplayFor(modelItem => item.VendorRemarks)</td>
                                <td>
                                    <a href="@Url.Action("VendorAddEdit", "Vendor", new { id = item.VendorID })"><img src="~/Content/assets/img/icon/Edit20X20.png" /></a>
                                    @*@Html("Edit", "VendorAddEdit", new { id = item.VendorID })*@ |
                                    <a href="#"><img src="~/Content/assets/img/icon/Del20X20.png" /></a>
                                    @*@Html.ActionLink("Delete", "Delete", new { id = item.VendorID })*@
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
                <hr />
                <p>@Html.ActionLink("Create New", "VendorAddEdit/0", null, new { @class = "btn btn-success" })
                </p>
            </div>
        </div>
    </div>
</div>


